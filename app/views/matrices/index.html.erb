<h1>Matrix</h1>
<div id="matrix">
  <%= link_to("2x2", {:dimension => 2}) %>

  <%= form_tag :controller => :matrices, :action => :index do %>
      <% (0...@dimension).each do |i| %>
          <p>
          <% (0...@dimension).each do |j| %>
              <%= text_field_tag :"matrix[#{i}][#{j}]", (@matrix ? @matrix[i,j] : 0) %>
          <% end %>
          </p>
      <% end %>
      <%= submit_tag "Preview" %>
  <% end %>

  <%= matrix_latex @matrix if @matrix %>

</div>
